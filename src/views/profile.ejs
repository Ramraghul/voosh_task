<!-- profile.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 50px;
        }

        .profile-card {
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .profile-image {
            max-width: 200px;
            border-radius: 50%;
        }

        .logout-btn {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .public-profiles-btn {
            position: absolute;
            top: 20px;
            left: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <a href="/logout" class="btn btn-danger logout-btn">Logout</a>

        <a href="/profileList" class="btn btn-warning public-profiles-btn">Profile List</a>

        <h1 class="mb-4">Welcome to Your Profile</h1>
        <div class="row">
            <div class="col-md-4">
                <img src="<%= user.profile %>" alt="Profile Picture" class="profile-image img-fluid mb-3">
                <h5 class="text-center">
                    <%= user.name %>
                </h5>
            </div>
            <div class="col-md-8">
                <div class="card profile-card">
                    <div class="card-body">
                        <h5 class="card-title">Personal Information</h5>
                        <hr>
                        <p class="card-text"><strong>Email:</strong>
                            <%= user.email %>
                        </p>
                        <p class="card-text"><strong>Name:</strong>
                            <%= user.name %>
                        </p>
                        <p class="card-text"><strong>Role:</strong>
                            <%= user.role %>
                        </p>
                        <p class="card-text"><strong>User Type:</strong>
                            <%= user.isPublic ? 'Public' : 'Private' %>
                        </p>
                    </div>
                </div>
                <a href="/updateProfile" class="btn btn-primary mt-3">Edit Profile</a>
            </div>
        </div>
    </div>
</body>

</html>
